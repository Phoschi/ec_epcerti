{% extends 'auth.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="flex items-center justify-center grow bg-center bg-no-repeat page-bg">
        <div class="card max-w-[370px] w-full">
            {% for message in app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}
            <form method="post" class="card-body flex flex-col gap-5 p-10">
                <div class="text-center mb-2.5">
                    <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
                        Nouveau mot de passe
                    </h3>
                    <p class="text-sm text-gray-600">
                        Choisissez votre nouveau mot de passe.
                    </p>
                </div>

                <div class="flex flex-col gap-1">
                    <label class="form-label font-normal text-gray-900">Mot de passe</label>
                    <div class="input" data-toggle-password="true">
                        <input name="password" placeholder="Nouveau mot de passe" type="password" required minlength="6" />
                        <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                            <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden"></i>
                            <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block"></i>
                        </button>
                    </div>
                    <small class="text-gray-500">Le mot de passe doit contenir au moins 6 caractères</small>
                </div>

                <button type="submit" class="btn btn-primary flex justify-center grow">
                    Réinitialiser le mot de passe
                </button>
            </form>
        </div>
    </div>
{% endblock %}
