{% extends 'auth.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="flex items-center justify-center grow bg-center bg-no-repeat page-bg">
        <div class="card max-w-[370px] w-full">
            {% for message in app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}
            <form method="post" class="card-body flex flex-col gap-5 p-10">
                <div class="text-center mb-2.5">
                    <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
                        Mot de passe oublié
                    </h3>
                    <p class="text-sm text-gray-600">
                        Entrez votre adresse email pour recevoir un lien de réinitialisation.
                    </p>
                </div>

                <div class="flex flex-col gap-1">
                    <label for="email" class="form-label font-normal text-gray-900">Email</label>
                    <input type="email" id="email" name="email" class="input" required>
                </div>

                <button type="submit" class="btn btn-primary flex justify-center grow">
                    Envoyer le lien
                </button>

                <div class="text-center">
                    <a href="{{ path('auth.login') }}" class="text-sm text-gray-600 hover:text-gray-900">
                        Retour à la connexion
                    </a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
